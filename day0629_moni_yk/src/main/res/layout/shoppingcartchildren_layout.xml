<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/shopping_children_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/checkBox"
        fresco:placeholderImage="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_shopping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/shopping_children_image"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_shopping_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shopping_children_image"
        android:layout_alignStart="@+id/txt_shopping_title"
        android:text="TextView" />

    <com.example.day0629_moni_yk.view.CombinationView
        android:layout_marginRight="3dp"
        android:id="@+id/jia_jian"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/shopping_children_image"
        android:layout_alignParentEnd="true"></com.example.day0629_moni_yk.view.CombinationView>
</RelativeLayout>